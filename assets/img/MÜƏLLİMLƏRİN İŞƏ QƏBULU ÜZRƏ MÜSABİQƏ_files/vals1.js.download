function reset_field(control_id,value)
{
    $.trim($("#"+control_id).val(value));
    $("#"+control_id).removeClass("border_red");
}

function empty_check(control_id,error_message)
{     
    
    if($.trim($("#"+control_id).val())=="")
    {
        $("#"+control_id).addClass("border_red");        
        if(error_message!="") $("#lbl"+control_id).html(error_message); 
        $("#lbl"+control_id).show();  
    }
    else
    {
        $("#"+control_id).removeClass("border_red");
        $("#lbl"+control_id).hide();  
        error_message = "";
    }
    return error_message ;
}

function make_red(control_id,isred)
{
    if(isred) $("#"+control_id).addClass("border_red");  
    else $("#"+control_id).removeClass("border_red");
}

function value_check(control_id,error_message,myvalue)
{     
    
