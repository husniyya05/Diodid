function general_check(control_id,error_message,empty_check,check_type,min_len,max_len)
{
    var success=false;
            
    if(check_type=="email" && checkEmail($.trim($("#"+control_id).val()))==true) success=true;
    else if(check_type=="number" && IsNumeric($.trim($("#"+control_id).val()))) success=true;
    
    if(empty_check && $.trim($("#"+control_id).val())=="")
    {
        success=false
    }
    
    if(min_len!=-1 && $.trim($("#"+control_id).val()).length<min_len)
    {
        success=false
    }
    
    if(max_len!=-1 && $.trim($("#"+control_id).val()).length>min_len)
    {
        success=false
    }
   
    if(!success)
    {
        $("#"+control_id).addClass("border_red");        
        if(error_message!="") $("#lbl"+control_id).html(error_message); 
        $("#lbl"+control_id).show();  
    }
    else
    {
        $("#"+control_id).removeClass("border_red");
        $("#lbl"+control_id).hide();  
        error_message = "";
    }
    return error_message ;
}

