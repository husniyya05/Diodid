function decimal_check(control_id,error_message)
{    
    if(parseFloat($.trim($("#"+control_id).val()))=="NaN")
    {
        $("#"+control_id).addClass("border_red");        
    }
    else
    {
        $("#"+control_id).removeClass("border_red");
        error_message = "";
    }
    return error_message ;    
}

function equal_check(control_id,value,error_message)
{
