function ConvertLocalTimeToUTCTime(UTCDateString)
{
	if(UTCDateString=="") return "";
	
	var splited = UTCDateString.split(" ");
	
	var first = splited[0].split("/");
	var second = splited[1].split(":");
	
	var finished = first[2]+"-"+first[0]+"-"+first[1]+" "+second[0]+":"+second[1]+":00";
	
	var convertdLocalTime = new Date(finished);

	var hourOffset = convertdLocalTime.getTimezoneOffset() / 60;

	convertdLocalTime.setHours( convertdLocalTime.getHours() + hourOffset ); 

	return convertdLocalTime.getMonth()+1+'/'+convertdLocalTime.getDate()+'/'+convertdLocalTime.getFullYear()+' '+convertdLocalTime.getHours()+':'+convertdLocalTime.getMinutes();
}

function ConvertUTCTimeToLocalTime(LocalTimeString)
{
	if(LocalTimeString=="") return "";
	
	var splited = LocalTimeString.split(" ");
	
	var first = splited[0].split("/");
	var second = splited[1].split(":");
	
	var finished = first[2]+"-"+first[0]+"-"+first[1]+" "+second[0]+":"+second[1]+":00";
		

	var convertdLocalTime = new Date(finished);

	var hourOffset = convertdLocalTime.getTimezoneOffset() / 60;

	convertdLocalTime.setHours( convertdLocalTime.getHours() - hourOffset ); 

	return convertdLocalTime.getMonth()+1+'/'+convertdLocalTime.getDate()+'/'+convertdLocalTime.getFullYear()+' '+( (convertdLocalTime.getHours()<10?'0':'') + convertdLocalTime.getHours() )+':'+( (convertdLocalTime.getMinutes()<10?'0':'') + convertdLocalTime.getMinutes() );;
}
	